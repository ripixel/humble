{{! Main docs site template }}
<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}} | Skier Docs</title>
    <link rel="stylesheet" href="/assets/docs.css" />
  </head>

  <body>
    {{> header }}
    <div class="docs-container">
      <aside class="sidebar">
        {{> sidebar }}
      </aside>
      <main class="content">
        {{{content}}}
        <img src="/assets/skier-easter-egg.svg" alt="" aria-hidden="true" style="position: absolute; right: 2.5rem; bottom: 2.5rem; width: 64px; opacity: 0.55; z-index: 2; pointer-events: none;" />
      </main>
    </div>
    {{> footer }}
  </body>

</html>
